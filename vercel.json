{
  "version": 2,
  "builds": [
    {
      "src": "/backend/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/package.json",
      "use": "react-scripts build"
    }
  ],
  "routes": [
     {
      "src": "/api/(.*)",
      "dest": "/backend/dist/index.js"
     },
     {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ]
 }